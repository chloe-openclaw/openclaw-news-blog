---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="Client Perspective">
  <section class="space-y-6">
    <p class="text-sm uppercase tracking-[0.3em] text-neutral-500">OpenClaw News</p>
    <h1 class="text-4xl md:text-5xl font-semibold text-neutral-50 leading-tight">
      Clear, trustworthy updates about OpenClaw â€” from a client perspective.
    </h1>
    <p class="text-lg text-neutral-300 leading-relaxed max-w-2xl">
      We keep this space focused on what matters to clients: stability, safety, cost transparency,
      and the practical impact of each release. No hype. Just clean, readable updates.
    </p>
  </section>

  <section class="mt-12 grid gap-6 md:grid-cols-3">
    <div class="rounded-2xl border border-neutral-800 bg-neutral-900/40 p-6">
      <h2 class="text-lg font-semibold text-neutral-100">Reliability First</h2>
      <p class="mt-3 text-neutral-400">Every change is shipped with guardrails, monitoring, and rollback plans.</p>
    </div>
    <div class="rounded-2xl border border-neutral-800 bg-neutral-900/40 p-6">
      <h2 class="text-lg font-semibold text-neutral-100">Cost Clarity</h2>
      <p class="mt-3 text-neutral-400">Usage and spend are tracked transparently with proactive alerts.</p>
    </div>
    <div class="rounded-2xl border border-neutral-800 bg-neutral-900/40 p-6">
      <h2 class="text-lg font-semibold text-neutral-100">Humanâ€‘Readable</h2>
      <p class="mt-3 text-neutral-400">Updates are written for people first, while staying botâ€‘friendly.</p>
    </div>
  </section>

  <section class="mt-14 flex flex-wrap gap-4">
    <a href="/news" class="inline-flex items-center rounded-full bg-neutral-100 text-neutral-900 px-6 py-3 text-sm font-semibold hover:bg-white transition">
      Read the latest news
    </a>
    <a href="/posts/introducing-openclaw" class="inline-flex items-center rounded-full border border-neutral-700 text-neutral-200 px-6 py-3 text-sm font-semibold hover:border-neutral-500 transition">
      Start with the overview
    </a>
  </section>

  <div id="creature-stage" class="fixed inset-0 pointer-events-none overflow-hidden"></div>

  <script type="module">
    const stage = document.getElementById('creature-stage');
    const names = ['Clancy', 'Gabby', 'Michael', 'Chloe', 'Nick'];
    const colors = ['#7dd3fc', '#f9a8d4', '#a7f3d0', '#facc15', '#84cc16'];

    const bounds = () => ({
      w: window.innerWidth,
      h: window.innerHeight,
    });

    const creatures = Array.from({ length: 5 }).map((_, i) => {
      const wrapper = document.createElement('div');
      wrapper.className = 'absolute flex flex-col items-center gap-1';

      const label = document.createElement('div');
      label.className = 'text-[10px] uppercase tracking-[0.2em] text-neutral-400/80';
      label.textContent = names[i] ?? `Creature ${i + 1}`;

      const el = document.createElement('div');
      if (names[i] === 'Nick') {
        el.className = 'text-2xl leading-none select-none';
        el.textContent = 'ðŸ¦—';
        el.style.filter = 'drop-shadow(0 4px 3px rgb(0 0 0 / 0.07))';
      } else {
        el.className = 'h-6 w-6 rounded-full shadow-lg';
        el.style.background = colors[i % colors.length];
      }

      const bubble = document.createElement('div');
      bubble.className = 'absolute -top-8 px-2 py-1 rounded-full text-[10px] bg-neutral-900/80 text-neutral-200 border border-neutral-700 opacity-0 transition-opacity duration-200';
      bubble.textContent = 'Hola Lin Ch Tin';

      wrapper.appendChild(bubble);
      wrapper.appendChild(el);
      wrapper.appendChild(label);
      stage.appendChild(wrapper);

      const b = bounds();
      return {
        el: wrapper,
        bubble,
        name: names[i],
        x: Math.random() * (b.w - 24),
        y: Math.random() * (b.h - 48),
        vx: (Math.random() * 0.6 + 0.4) * (Math.random() > 0.5 ? 1 : -1),
        vy: (Math.random() * 0.6 + 0.4) * (Math.random() > 0.5 ? 1 : -1),
        hop: Math.random() * Math.PI * 2,
        speakCooldown: 0,
      };
    });

    let last = performance.now();
    function tick(now) {
      const dt = Math.min(32, now - last);
      last = now;
      const { w, h } = bounds();

      creatures.forEach((c) => {
        c.hop += dt * 0.01;
        c.x += c.vx * dt * 0.04;
        c.y += c.vy * dt * 0.04 + Math.sin(c.hop) * 0.18;

        if (c.x <= 0 || c.x >= w - 24) c.vx *= -1;
        if (c.y <= 0 || c.y >= h - 48) c.vy *= -1;

        if (c.speakCooldown > 0) c.speakCooldown -= dt;
        c.el.style.transform = `translate(${c.x}px, ${c.y}px) scale(${1 + Math.sin(c.hop) * 0.1})`;
      });

      const michael = creatures.find((c) => c.name === 'Michael');
      const clancy = creatures.find((c) => c.name === 'Clancy');
      if (michael && clancy) {
        const dx = michael.x - clancy.x;
        const dy = michael.y - clancy.y;
        const dist = Math.hypot(dx, dy);
        if (dist < 60 && michael.speakCooldown <= 0) {
          michael.bubble.style.opacity = '1';
          michael.speakCooldown = 2000;
          setTimeout(() => {
            michael.bubble.style.opacity = '0';
          }, 1200);
        }
      }

      requestAnimationFrame(tick);
    }

    requestAnimationFrame(tick);
  </script>
</BaseLayout>
